<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_club">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/friend_ico"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/friend_smaller" />

            <ImageView
                android:id="@+id/club_ico"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/club_smaller" />

            <ImageView
                android:id="@+id/home_ico"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/home_smaller" />


            <ImageView
                android:id="@+id/scoreboard_ico"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/scoreboard_smaller" />

            <ImageView
                android:id="@+id/profile_ico"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/person_smaller" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:background="@color/color1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:text="Z Club" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/pngegg" />

        <Button
            android:id="@+id/own_club_memberlist_btn"
            android:background="@drawable/shape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="View Member List" />

        <Button
            android:id="@+id/own_club_leaderboard_btn"
            android:background="@drawable/shape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="View Leaderboard" />

        <Button
            android:background="@drawable/shape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="View Club Info" />

        <Button
            android:id="@+id/leave_club_btn"
            android:background="@drawable/shape2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Leave Club" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>